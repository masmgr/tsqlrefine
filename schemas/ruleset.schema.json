{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tsqlrefine ruleset",
  "type": "object",
  "properties": {
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["error", "warning", "info", "inherit", "none"],
            "description": "Severity level: error, warning, info (enabled with specified severity), inherit (enabled with rule default severity), none (disabled)."
          }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    }
  },
  "required": ["rules"],
  "additionalProperties": false
}

